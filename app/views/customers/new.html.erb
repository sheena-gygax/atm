<% provide(:title, 'Sign up') %>
<div class='container jumbotron new-customer'>
  <h1>Sign up</h1>
    
  <%= form_for @customer do |f| %>
    <div class='row p-3'>
      <%= f.label :first_name, class: 'auto' %>
      <%= f.text_field :first_name %>
    </div>

    <div class='row p-3'>
      <%= f.label :last_name %>
      <%= f.text_field :last_name %>
    </div>

    <div class='row p-3'>
      <%= f.label :pin_number %>
      <%= f.password_field :pin_number %>
    </div>

    <%= f.submit "Save", class: "btn btn-primary" %>
  <% end %>
</div>