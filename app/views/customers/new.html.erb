<% provide(:title, 'Sign up') %>
<main class='form-signin new-customer'>
  <h1>Sign up</h1>
    
  <%= form_for @customer do |f| %>
    <div class='row p-3'>
      <%= f.label :first_name, class: 'auto' %>
      <%= f.text_field :first_name, class: 'form-control' %>
    </div>

    <div class='row p-3'>
      <%= f.label :last_name %>
      <%= f.text_field :last_name, class: 'form-control' %>
    </div>

    <div class='row p-3'>
      <%= f.label :pin_number %>
      <%= f.password_field :pin_number, class: 'form-control' %>
    </div>

    <%= f.submit "Save", class: "btn btn-primary w-100" %>
  <% end %>
</main>